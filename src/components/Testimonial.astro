---
import Container from "./Container.astro";
import TestimonialCard from "./TestimonialCard.astro";
import { characteristics } from "../data/characteristics";
---

<section
    class="w-full text-white bg-gradient-to-r from-black via-gray-800 to-gray-700 py-10 flex justify-center mx-auto px-5 md:px-0"
>
    <div class="max-w-[1200px] flex flex-col gap-10">
        <h2 class="font-bold text-3xl md:text-3xl">
            Por que trabajar con Kacero
        </h2>
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-10 justify-center"
        >
            {
                characteristics.map((caracteristica) => {
                    return (
                        <TestimonialCard
                            title={caracteristica.title}
                            description={caracteristica.description}
                            img={caracteristica.img}
                        />
                    );
                })
            }
        </div>
    </div>
</section>
