---
import { Image } from "astro:assets";
import WatchIcon from "../assets/img/eficacia.png";
export interface Props {
    title: string;
    description: string;
    img: string;
}

const { title, description, img } = Astro.props;
---

<div
    class="flex flex-col items-center md:items-start gap-4 max-w-sm h-auto md:h-72 text-white"
>
    <div class="w-auto">
        <Image src={`${img}`} alt={`${title} image`} width={30} height={30} class="w-auto"/>
    </div>
    <h3 class="text-2xl font-semibold">{title}</h3>
    <p class="text-gray-300 text-center md:text-start">
        {description}
    </p>
</div>
